<div class="container">
	<div class="row">
		<div class="col s12">
			<h1>Your Current Shopping List</h1>
		</div>
	</div>

	<div class="row">
		<div class="col s4 push-s8">
			
		</div>
		<div class="col s4">
			
		</div>
		<div class="col s4 pull-s8">
			<h5><strong>Change the order of your items here</strong></h>
		</div>
	</div>


	<% list.forEach(item => { %>
	<div class="row">
		<div class="col s4 push-s8">
			<form action="/list/index?_method=DELETE" method="POST">
				<input type="hidden" name="item_name" value="<%= item.item_name %>" >
				<button type="submit"><i class="large material-icons">delete_forever</i></button>
			</form>
		</div>
		<div class="col s4">
				<h4><strong><%= item.item_name %></strong></h4>
		</div>
		<div class=" col s4 pull-s8">
			<form action="/list/index?_method=PUT" method="POST">
			<input type="hidden" name="item_name" value="<%= item.item_name %>">
			<input type="integer" name="list_order" value=<%= item.list_order %>>
			<button type="submit"><i class="medium material-icons">format_list_numbered</i></button>
			</form>
		</div>
	</div>			
	<% }) %>


	<h1>Add Items to Your List</h1>
	<div class="row">
		<div class="col s6 push-s3">
			<form action="/list/index" method="POST">
				<input type="text" name="item_name">
				<button type="submit"><i class="medium material-icons">add_shopping_cart</i></button>
			</form>
		</div>
	</div>
</div>
<div class="row">
	<div class="col s12">
		<div class="section">
			<a href="/shopping/index"><i class="large material-icons">shopping_cart</i>Let's Go Shopping!</a>
		</div>
	</div>
</div>


